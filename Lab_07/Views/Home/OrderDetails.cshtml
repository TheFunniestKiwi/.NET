@model Lab_07.Models.Invoice

@{
    ViewData["Title"] = "OrderDetails";
}

<h1>OrderDetails</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvoiceDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BillingAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BillingAddress)
            @Html.DisplayFor(model => model.BillingCity)
            @Html.DisplayFor(model => model.BillingState)
            @Html.DisplayFor(model => model.BillingCountry)
            @Html.DisplayFor(model => model.BillingPostalCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
	    <dt class = "col-sm-2">
		    Ordered Songs
	    </dt>
	    <dd class = "col-sm-10">
		    <table class="table">
			    <thead>
			    <tr>
				    <th>
					    Track ID
				    </th>
				    <th>
					    Track
				    </th>
				    <th>
					    Price
				    </th>
			    </tr>
			    </thead>
			    <tbody>
			    @foreach (var item in Model.InvoiceLines) {
				    <tr>
					    <td>
						    @Html.DisplayFor(modelItem => item.Track.TrackId)
					    </td>
					    <td>
						    @Html.DisplayFor(modelItem => item.Track.Name)
					    </td>
					    <td>
						    @Html.DisplayFor(modelItem => item.Track.UnitPrice)
					    </td>
				    </tr>
			    }
			    </tbody>
		    </table>
	    </dd>
    </dl>
</div>
<div>
	<a asp-action="Index">Back to List</a>
</div>
