@model IEnumerable<Lab_07.Models.Invoice>

@{
    ViewData["Title"] = "MyOrders";
}

<h1>MyOrders</h1>

<table class="table">
    <thead>
    <tr>
	    <th>
		    @Html.DisplayNameFor(model => model.InvoiceId)
	    </th>
	    <th>
		    @Html.DisplayNameFor(model => model.InvoiceDate)
	    </th>
	    <th>
		    @Html.DisplayNameFor(model => model.BillingAddress)
	    </th>
	    <th>
		    @Html.DisplayNameFor(model => model.Total)
	    </th>
	    <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
	<tr>
		<td>
			<a asp-action="OrderDetails" asp-route-id="@item.InvoiceId">@item.InvoiceId</a> 
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.InvoiceDate)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.BillingAddress)<br/>
			@Html.DisplayFor(modelItem => item.BillingCity)<br/>
			@Html.DisplayFor(modelItem => item.BillingState)<br/>
			@Html.DisplayFor(modelItem => item.BillingCountry)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Total)
		</td>
		<td>
			<a asp-action="OrderDetails" asp-route-id="@item.InvoiceId">Details</a> 
		</td>
	</tr>
}
    </tbody>
</table>
